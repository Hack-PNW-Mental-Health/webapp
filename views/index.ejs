            <footer id="bottom-form">
                <form action="/db_routes/fourm_data" method="post">
                    <label for="name">Name *</label><br>
                    <input name="name" id="name" type="text" required/><br>
                    <label for="age" required>Age *</label><br>
                    <input name="age" id="age" type="text" required/><br>
                    <label for="gender">Gender *</label><br>
                    <select name="gender" required>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Non-Binary</option>
                    </select><br>
                    <label for="disorder">Stressor *</label><br>
                    <select id="disorder" name="disorder" required>
                        <option>School Stress</option>
                        <option>Activities</option>
                        <option>Financial</option>
                        <option>Social</option>
                        <option>Medical</option>
                        <option>Family</option>
                        <option>Institutionalized Stigma</option>
                        <option>Other</option>
                    </select><br>
                    <label for="story">How did you develop the stressor? *</label><br>
                    <input id="story" type="text" name="story" required></input><br>

                    <input id="button" type="submit" value="Submit"/>
                </form>
            </footer>
        </div>

        <script src="/uploads/scripts/index.js"></script>
    </body>
