    <body>
        <div class="wrapper">
            <header id="top-header">
                <p class="pink-text">Mental Health Matters!</p>
            </header>
            <section class="main-section" id="layer-map">
                <article style="display:inline" class="person" id="person1"><img src="../uploads/NelsonBlinking.gif" height="160px"/></article>
                <article style="display:inline" class="person" id="person2"><img src="../uploads/PersonInChair.gif" height="160px"/></article>
                <article style="display:inline" class="person" id="person3"><img src="../uploads/PongoRegular.gif" height="160px"/></article>
                <article style="display:inline" class="person" id="person4"><img src="../uploads/NormalPerson.gif" height="160px"/></article>
                <article style="display:inline" class="person" id="person5"><img src="../uploads/MarcusNormal.gif" height="160px"/></article>
                <article style="display:inline" class="person" id="person6"><img src="../uploads/BaiLiObscurity.gif" height="160px"/></article>
            </section>
